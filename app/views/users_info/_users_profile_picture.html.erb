<% unless current_user.blank? %>
	<div id="photo_upload">
      <% unless @users_profile_picture.new_record? %>
        <%= image_tag @users_profile_picture.photo.url(:small), :class => "picprofile" %>
      <% else %>
          <img src="/images/minimalistica/png/64x64/user.png" class="picprofile" />
      <% end %>      
    </div>

    <div>
        <span>Select an image file on your computer</span><br/>
        <%= file_field :users_profile_picture, :photo %>
   </div>
   <div style="float:none;clear: right;"></div>
<% end %> 
